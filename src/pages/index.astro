<script>
  function calcXp(initialDate: string) {
    const currentDate = new Date();
    const start = new Date(initialDate);

    let xpYears = currentDate.getFullYear() - start.getFullYear();
    const currentMonth = currentDate.getMonth();
    const initialMonth = start.getMonth();

    if (
      currentMonth < initialMonth ||
      (currentMonth === initialMonth && currentDate.getDate() < start.getDate())
    ) {
      xpYears--;
    }

    return xpYears;
  }

  const fechaInicio = "2022-09-01";
  const tiempoExperiencia = calcXp(fechaInicio);
  const experienceYearsElement = document.getElementById("experience-years");
  if (experienceYearsElement) {
    experienceYearsElement.textContent = `+${tiempoExperiencia}`;
  }
</script>
