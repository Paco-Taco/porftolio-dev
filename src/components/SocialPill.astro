---
interface Props {
  url: string;
}

const { url } = Astro.props;
---

<a
  class="rounded-full border border-white/10 flex justify-center items-center gap-x-2 py-4 px-2 md:py-3 md:px-3 lg:py-2 lg:px-4 bg-white/5 hover:scale-105 md:hover:scale-110 transition hover:bg-white/10"
  href={url}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
