---
import Python from "./icons/Python.astro";
import React from "./icons/React.astro";

const tags = {
  python: {
    name: "Python",
    class: "bg-black text-white",
    icon: Python,
  },

  react: {
    name: "React",
    class: "bg-blue-200/20 text-white/85",
    icon: React,
  },
};

const projects = [
  {
    title: "Li'l Parrot: Ody-sea",
    description:
      "Dolor consectetur dolore duis enim ex. Eiusmod elit cupidatat sunt non ea esse sit. Dolore deserunt laboris aute est nisi reprehenderit quis elit tempor. Quis esse occaecat ad commodo nisi irure aliqua incididunt nostrud voluptate id anim elit non. Adipisicing amet ut id fugiat dolore in dolore commodo mollit nostrud eiusmod aliqua proident.",
    link: "https://github.com/Paco-Taco/LilParrotOdy-Sea",
    github: "https://github.com/Paco-Taco/LilParrotOdy-Sea",
    image: "/img/projects/lilparrot.webp",
    tags: [tags.python, tags.react],
  }, 
];
---

{
  projects.map(({ title, description, tags, image }) => (
    <article>
      <h3 class="text-2xl font-semibold text-greenEmerald mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2  flex-row mb-4 ">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs py-1 px-2 ${tag.class}`}>
              <tag.icon class="size-4" /> {tag.name}
            </span>
          </li>
        ))}
      </ul>

      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla del proyecto ${title}`}
      />
    </article>
  ))
}
