---
import GitHub from "./icons/GitHub.astro";
import Python from "./icons/Python.astro";
import React from "./icons/React.astro";
import Link from "./icons/Link.astro";
import Mongo from "./icons/Mongo.astro";
import Firebase from "./icons/Firebase.astro";

import LinkButton from "./LinkButton.astro";

const tags = {
  python: {
    name: "Python",
    class: "bg-black text-white",
    icon: Python,
  },

  react: {
    name: "React",
    class: "bg-blue-200/20 text-white/85",
    icon: React,
  },

  mongo: {
    name: 'Mongo',
    class: 'bg-green-500/20 text-white/85',
    icon: Mongo,
  },

  firebase: {
    name: 'Firebase',
    class: 'bg-orange-500/20 text-white/85',
    icon: Firebase,
  },
};

const projects = [
  {
    title: "Li'l Parrot: OdySea - Un juego donde te diviertes y salvas al mundo",
    description:
      "Li'l Parrot: OdySea es un RPG donde explorarás y terminarás con los restos de basura encontrados en el ambiente. Basado en el 14vo Objetivo de Desarrollo Sustentable de las Naciones Unidas ¡Serás sumergido en una aventura única!",
    link: "https://github.com/Paco-Taco/LilParrotOdy-Sea",
    github: "https://github.com/Paco-Taco/LilParrotOdy-Sea",
    image: "/img/projects/lilParrot.webp",
    tags: [tags.python],
  },
  {
    title: "Ni pa' la muela - Un blog con buen sazón",
    description:
      "Un RPG donde explorarás y terminarás con los restos de basura encontrados en el ambiente. Basado en el 14vo Objetivo de Desarrollo Sustentable de las Naciones Unidas ¡Serás sumergido en una aventura única!",
    link: "https://github.com/Paco-Taco/ni-pa-la-muela-1",
    github: "https://github.com/Paco-Taco/ni-pa-la-muela-1",
    image: "/img/projects/nplm.webp",
    tags: [tags.react, tags.mongo, tags.firebase],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    projects.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 group md:flex-row md:space-x-8 space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col md:items-center col-span-6 row-span-6 gap-8 transition duration-500 ease-out transform overflow-clip rounded-xl sm:rounded-xl md:hover:shadow-2xl md:hover:border-gray-700/30 md:hover:bg-gray-800/50">
            <img
              src={image}
              alt={`Captura de pantalla del proyecto ${title}`}
              class="object-cover object-top w-full transition duration-500 h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg flex flex-col justify-center">
          <h3 class="text-2xl font-bold text-gray-100">{title}</h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-400">{description}</div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
